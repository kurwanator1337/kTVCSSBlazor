<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Главная</MudNavLink>
    <MudNavLink Href="/chat" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Chat">Сообщения @UnreadedCount</MudNavLink>
    <MudNavLink Href="/about" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Info">О проекте</MudNavLink>
    <MudNavLink Disabled=true Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.EmojiEvents">Боевые кубки</MudNavLink>
    <MudNavGroup Icon="@Icons.Material.Filled.People" Title="Игроки" Expanded="false">
        <MudNavLink IconColor=Color.Success Icon="@Icons.Material.Filled.PeopleOutline" Href="/players" Match="NavLinkMatch.All">Все игроки</MudNavLink>
        @*  <MudNavLink IconColor=Color.Error Icon="@Icons.Material.Filled.PeopleOutline" Href="/players-t1" Match="NavLinkMatch.All">TIER-1 игроки</MudNavLink>
        <MudNavLink IconColor=Color.Warning Icon="@Icons.Material.Filled.PeopleOutline" Href="/players-t2" Match="NavLinkMatch.All">TIER-2 игроки</MudNavLink> *@
